{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/src/*"],
      "@academy/mobile-shared": ["../shared/src/index.ts"]
    },
    "types": ["jest"],
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "existing-code", "dist", ".expo"]
}
