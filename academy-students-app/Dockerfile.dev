# Dockerfile for Academy Students App Development  
FROM node:18-alpine

# Install system dependencies
RUN apk add --no-cache \
    git \
    bash \
    curl \
    python3 \
    make \
    g++ \
    && npm install -g expo-cli @expo/cli

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with npm ci for faster, reliable, reproducible builds
RUN npm ci --only=production=false

# Copy app source
COPY . .

# Expose ports  
EXPOSE 19006 8081

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:19006 || exit 1

# Default command (overridden by docker-compose)
CMD ["npx", "expo", "start", "--dev-client", "--clear"]