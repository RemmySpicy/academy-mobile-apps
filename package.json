{
  "name": "academy-mobile-apps",
  "version": "1.0.0",
  "description": "Academy Mobile Applications - Instructor and Student Apps",
  "private": true,
  "workspaces": [
    "academy-instructors-app",
    "academy-students-app",
    "shared"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:instructor": "cd academy-instructors-app && npm start",
    "dev:student": "cd academy-students-app && npm start",
    "dev:all": "concurrently \"npm run dev:instructor\" \"npm run dev:student\"",
    "install:all": "npm install",
    "build:instructor": "cd academy-instructors-app && eas build --profile preview",
    "build:student": "cd academy-students-app && eas build --profile preview",
    "build:all": "npm run build:instructor && npm run build:student",
    "test:instructor": "cd academy-instructors-app && npm test",
    "test:student": "cd academy-students-app && npm test",
    "test:shared": "cd shared && npm test",
    "test:all": "npm run test:instructor && npm run test:student && npm run test:shared",
    "lint:instructor": "cd academy-instructors-app && npm run lint",
    "lint:student": "cd academy-students-app && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:all": "npm run lint:instructor && npm run lint:student && npm run lint:shared",
    "type-check:instructor": "cd academy-instructors-app && npx tsc --noEmit",
    "type-check:student": "cd academy-students-app && npx tsc --noEmit",
    "type-check:shared": "cd shared && npx tsc --noEmit",
    "type-check:all": "npm run type-check:instructor && npm run type-check:student && npm run type-check:shared",
    "clean:instructor": "cd academy-instructors-app && rm -rf node_modules .expo dist",
    "clean:student": "cd academy-students-app && rm -rf node_modules .expo dist",
    "clean:shared": "cd shared && rm -rf node_modules dist",
    "clean:all": "npm run clean:instructor && npm run clean:student && npm run clean:shared",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "deploy": "npm run build:all",
    "prepare": "husky install || true",
    "pre-commit": "npx lint-staged",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "dev:fresh": "npm run clean:all && npm run install:all && npm run dev:all",
    "reset": "npm run clean:all && rm -rf node_modules package-lock.json && npm install && npm run install:all"
  },
  "keywords": [
    "academy",
    "mobile",
    "react-native",
    "expo",
    "instructor",
    "student",
    "education"
  ],
  "author": "Academy Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "glob": "^10.0.0",
    "react": "19.1.0",
    "use-latest-callback": "0.2.1",
    "react-hook-form": "7.53.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-template-literals": "^7.27.1",
    "@testing-library/jest-native": "5.4.3",
    "@testing-library/react-native": "12.7.2",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "concurrently": "9.1.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-native": "4.1.0",
    "expo-build-properties": "~0.14.8",
    "husky": "9.1.6",
    "jest": "30.0.5",
    "jest-expo": "~51.0.4",
    "lint-staged": "16.1.4",
    "prettier": "3.4.2",
    "react-native-monorepo-config": "^0.1.9",
    "typescript": "5.9.2"
  }
}
